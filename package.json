{
  "name": "wally",
  "version": "0.1.0",
  "private": false,
  "description": "A personal finance management application for tracking transactions, spending, and net worth",
  "repository": {
    "type": "git",
    "url": "https://github.com/alec2020/wally.git"
  },
  "homepage": "https://github.com/alec2020/wally",
  "license": "MIT",
  "author": "Alec Corum",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "eval": "npx tsx scripts/eval/run-eval.ts",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "next build && electron-builder",
    "electron:build:optimized": "next build && node scripts/clean-standalone.js && npx electron-rebuild -f -w better-sqlite3 && cp -r node_modules/better-sqlite3/build .next/standalone/node_modules/better-sqlite3/ && npx electron-builder",
    "electron:publish": "next build && electron-builder --publish always",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "next": "16.1.3",
    "next-themes": "^0.4.6",
    "openai": "^6.16.0",
    "papaparse": "^5.5.3",
    "react": "19.2.3",
    "react-day-picker": "^9.13.0",
    "react-dom": "19.2.3",
    "react-dropzone": "^14.3.8",
    "recharts": "^2.15.4",
    "tailwind-merge": "^3.4.0",
    "unpdf": "^1.4.0",
    "electron-updater": "^6.3.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/papaparse": "^5.5.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.3",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wait-on": "^8.0.0"
  }
}
